@using CkanDotNet.Api.Model
@using CkanDotNet.Web.Models
@model PackageSearchResultsModel

@using System.Configuration
@{
    var theme = ConfigurationManager.AppSettings["Theme"];
} 

<section class="container">
    <h2 class="container-title">Results (@Model.Pager.ToString())
    @if (Model.SearchResults.Count > 0) { 
         @Html.Partial("_Pager")      
    }
   </h2>

    @if (Model.SearchResults.Count > 0)
    {
        @Html.Partial("~/Views/Shared/Search/_SearchResultsList.cshtml")
    }
    else
    {
        <div class="results-none">We weren't able to find what you were looking for..  
        Try a new search term or <a href="#">suggest</a> a new dataset..</div>   
    }


</section>

<div class="pager-container">
@Html.Partial("_Pager")
</div>